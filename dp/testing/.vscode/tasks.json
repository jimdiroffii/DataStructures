{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file with C++20",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++20"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compiler task using g++ with C++20 standard."
        }
    ],
    "version": "2.0.0"
}